<?xml version="1.0" encoding="utf-8" ?>
<odoo>

     <record id="apartmentplug_apartment_tag_tree" model="ir.ui.view">
        <field name="name">apartmentplug.apartment.tag.tree</field>
        <field name="model">apartmentplug.apartment.tag</field>
        <field name="arch" type="xml">
            <tree string="ApartmentTag">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="apartmentplug_apartment_tag_form" model="ir.ui.view">
        <field name="name">apartmentplug.apartment.tag.form</field>
        <field name="model">apartmentplug.apartment.tag</field>
        <field name="arch" type="xml">
            <form>
                <field name="active" invisible="1" />
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <group>
                                <field 
                                    name="name" 
                                    class="mb-3" 
                                    required="1"
                                    options="{'no_create': True, 'no_open': True}"
                                    />
                            </group>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="apartmentplug_apartment_tag_action" model="ir.actions.act_window">
        <field name="name">ApartmentTag</field>
        <field name="res_model">apartmentplug.apartment.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        action="apartmentplug_apartment_tag_action"
        id="apartmentplug_apartment_tag_menu"
        name="Property Tag"
        parent="config_menu"
        sequence="99"
    />
</odoo>


