<?xml version="1.0" encoding="utf-8" ?>
<odoo>

     <record id="apartmentplug_apartment_tree" model="ir.ui.view">
        <field name="name">apartmentplug.apartment.tree</field>
        <field name="model">apartmentplug.apartment</field>
        <field name="arch" type="xml">
            <tree string="Apartment">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="user_id"/>
                <field name="bedrooms"/>
                <field name="expected_price"/>
                <field name="state"/>
                <field name="active" column_invisible="1"/>

            </tree>
        </field>
    </record>

    <record id="apartmentplug_apartment_form" model="ir.ui.view">
        <field name="name">apartmentplug.apartment.form</field>
        <field name="model">apartmentplug.apartment</field>
        <field name="arch" type="xml">
            <form>
                <field name="active" invisible="1" />
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="mb-2" required="1"/>
                        </h1>
                    </div>
                    <div>
                       <group>
                            <field name="tags_ids" class="mb-4" widget="many2many_tags"/>
                        </group>    
                    </div>
            
                    <group>
                        <group>
                            <field 
                                name="property_type_id"
                                options="{'no_create': True, 'no_open': True}"
                            />
                        </group>
                        <group>
                            <field name="postcode" widget="digital_address"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="state" invisible="not id"/>
                        </group>
                    </group>
                        <notebook>
                            <page string="Description">
                                    <group>
                                        <field name="description"/>
                                    </group>
                                    <group>
                                        <field name="bedrooms"/>
                                    </group>
                                    <group>
                                        <field name="living_rooms"/>
                                    </group>
                                    <group>
                                        <field name="facades"/>
                                    </group>
                                    <group>
                                        <field name="garage"/>
                                    </group>
                                    <group>
                                        <field name="garden"/>
                                    </group>
                                    <group>
                                        <field name="garden_area"/>
                                    </group>
                                    <group>
                                        <field name="garden_orientation"/>
                                    </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field 
                                        name="user_id"
                                        widget="many2one_avatar_user"
                                        options="{'no_create': True, 'no_open': True}"/>
                                </group>
                                <group>
                                    <field 
                                        name="partner_id"
                                        widget="many2one_avatar_user"
                                        options="{'no_create': True, 'no_open': True}"
                                    />
                                </group>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="apartmentplug_apartment_action" model="ir.actions.act_window">
        <field name="name">Apartment</field>
        <field name="res_model">apartmentplug.apartment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Apartment available. Let's create one!
            </p>
        </field>
    </record>

    <record id="apartmentplug_apartment_search" model="ir.ui.view">
        <field name="name">apartmentplug.apartment.search</field>
        <field name="model">apartmentplug.apartment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
                <filter
                    string="Low Price"
                    name="groupby_low_price"
                    domain = "[('expected_price', '&lt;', 1000)]"
                />
                
                <filter
                    string="High Price"
                    name="groupby_high_price"
                    domain = "[('expected_price', '&gt;', 1000)]"
                />
                <group expand="1" string="Group By">
                    <filter
                        string="State"
                        name="groupby_state"
                        context="{'group_by': 'state'}"
                    />
                    <filter
                        string="Bedrooms"
                        name="groupby_bedrooms"
                        context="{'group_by': 'bedrooms'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <menuitem
        action="apartmentplug_apartment_action"
        id="apartmentplug_apartment_menu"
        name="Apartments"
        parent="apartments_menu"
        sequence="1"
    />
</odoo>
