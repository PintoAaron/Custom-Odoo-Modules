<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- apartmentplug_offer tree view -->
    <record id="apartmentplug_offer_view_tree" model="ir.ui.view">
        <field name="name">apartmentplug.offer.view.tree</field>
        <field name="model">apartmentplug.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <button name="action_accept" string="Accept" type="object" icon="fa-check"/>
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times"/>            
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- apartmentplug_offer form view -->
    <record id="apartmentplug_offer_view_form" model="ir.ui.view">
        <field name="name">apartmentplug.offer.view.form</field>
        <field name="model">apartmentplug.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field 
                            name="status" 
                            invisible="not id"
                            widget="status_bar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>