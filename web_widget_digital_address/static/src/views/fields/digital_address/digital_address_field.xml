<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="web.DigitalAddressField">
        <t t-if="props.readonly">
            <span t-esc="props.record.data[props.name]" />
        </t>
        <t t-else="">
            <div class="o_input_group">
                <div class="o_input_container">
                    <input
                        class="o_input"
                        t-att-id="props.id"
                        type="text"
                        autocomplete="off"
                        t-att-placeholder="props.placeholder"
                        t-ref="input"
                    />
                    <span class="fa fa-question-circle" title="Precede your input values with an asterisk to opt out of the automatic format"/>
                </div>
            </div>
        </t>
    </t>

</templates>
