<odoo>
    <record id="view_document_manager_tree" model="ir.ui.view">
        <field name="name">document.manager.tree</field>
        <field name="model">document.manager</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="file_type"/>
                <field name="file"/>
            </tree>
        </field>
    </record>

    <record id="view_document_manager_form" model="ir.ui.view">
        <field name="name">document.manager.form</field>
        <field name="model">document.manager</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="file" filename="file_name"/>
                        <field name="file_name"/>
                        <field name="file_type"/>
                        <field name="content" widget="text"/>
                    </group>
                    <button string="Edit" type="object" name="action_edit_document" class="oe_highlight" attrs="{'invisible': [('id', '=', False)]}"/>
                    <separator/>
                    <button string="Save" type="object" name="action_save_document" class="oe_highlight" attrs="{'invisible': [('id', '=', False)]}"/>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="document_manager_action" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">document.manager</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new file!
            </p>
        </field>
    </record>

    <menuitem id="menu_document_manager_root"
              name="Document Management"
              sequence="10"/>

    <menuitem id="menu_document_manager"
              name="Documents"
              parent="menu_document_manager_root"
              action="document_manager_action"
              sequence="10"/>
</odoo>